root = true

# 对所有文件生效
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false

[*.go]
indent_size = 4
indent_style = tab

[*.toml]
indent_size = 2

[Makefile]
indent_size = 4
indent_style = tab
